---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import theme from "@/data/theme";
import SEOTags from "@/components/seo/SEOTags.astro";
import type { HeadTags } from "@/utils/types/HeadTags";

import "@/styles/tailwind.css";
import "@/styles/global.css";
import "@/styles/post.css";

export type Props = HeadTags;

const headTags = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <SEOTags {...headTags}/>

  <body
    class="mx-auto flex min-h-screen max-w-[75ch] flex-col gap-12 text-sm text-neutral-400 px-6 py-6 md:py-12 md:px-4"
  >
    <Header />
    <slot />
    <Footer />
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-6GW38D46RW"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-6GW38D46RW');
    </script>
  </body>
</html>

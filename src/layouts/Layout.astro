---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import theme from "@/data/theme";
import SEOTags from "@/components/seo/SEOTags.astro";
import type { HeadTags } from "@/utils/types/HeadTags";

import "@/styles/tailwind.css";
import "@/styles/global.css";
import "@/styles/post.css";

export type Props = HeadTags;

const headTags = Astro.props;
import { ViewTransitions } from 'astro:transitions';
import  SpeedInsights  from "@vercel/speed-insights/astro"
---

<!DOCTYPE html>
<html lang="en">
  <SEOTags {...headTags}/>

  <body
    class="mx-auto flex min-h-screen max-w-[75ch] flex-col gap-12 text-sm text-neutral-400 px-6 py-6 md:py-12 md:px-4"
  >
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KFR48DV"
      height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
      <!-- End Google Tag Manager (noscript) -->
    <Header />
    <slot />
    <ViewTransitions />
    <Footer />
    <SpeedInsights />
  </body>
</html>
